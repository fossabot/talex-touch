/**
 * @see https://www.electron.build/configuration/configuration
 */
{
  "appId": "talex-touch",
  "asar": true,
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "!node_modules/",
    "!.github/",
    "!.vscode/",
    "!.vitepress/",
    "!docs/",
    "!public/",
    "!src/",
    "!release/",
    "!talex-touch/",
    "!.gitattributes",
    "!.gitignore",
    "!.npmrc",
    "!auto-imports.d.ts",
    "!CHANGELOG.md",
    "!component.d.ts",
    "!electron-builder.json5",
    "!index.html",
    "!LICENSE",
    "!pnpm-lock.yaml",
    "!README.md",
    "!tsconfig.json",
    "!tsconfig.node.json",
    "!vite.config.ts",
    "!vite-plugin-electron.log",
//    "!package.json"
  ],
//  "mac": {
//    "artifactName": "${productName}_${version}.${ext}",
//    "target": [
//      "dmg"
//    ]
//  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32",
//          "armv7l",
          "arm64"
        ]
      },
      {
        "target": "portable",
        "arch": [
          "x64",
          "ia32",
        ]
      }
    ],
    "artifactName": "${productName}_${version}.${ext}",
    "icon": "./public/favicon.ico"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb",
      "rpm",
      "snap",
//      "tar.xz"
    ]
  },
  "nsis": {
//    "guild": "com.talex.touch",
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true,
    "installerIcon": "./public/favicon.ico",
    "uninstallerIcon": "./public/favicon.ico",
    "installerHeaderIcon": "./public/favicon.ico",
    "shortcutName": "TalexTouch"
  },
  "fileAssociations": [
    {
      "ext": "touch-plugin",
      "name": "TalexTouch",
      "role": "Editor",
      "description": "TalexTouch AddonPackage File (Plugin)"
    }
  ],
