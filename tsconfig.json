{
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "baseUrl": ".",
    "strict": false,
    "paths": {
      "~/*": ["./src/*"],
      "@comp/*": ["./src/components/*"],
      "@assets/*": ["./src/assets/*"],
      "@modules/*": ["./src/modules/*"],
      "@styles/*": ["./src/styles/*"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
  },
  "include": ["src", "src/**/*"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
